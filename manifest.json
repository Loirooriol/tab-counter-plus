{
  "name": "Tab Counter++ (JMM)",
  "short_name": "Tab Counter",
  "author": "Jonathon Merz",
  "homepage_url": "https://github.com/jmmerz/tab-counter-plus-plus-jmm",
  "version": "1.0",
  "description": "Shows the number of tabs in each window and current tab index.",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "tab-counter-plus-plus-jmm@jmmerz.github",
      "strict_min_version": "52.0"
    }
  },
  "icons": {
    "64": "icon.svg"
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": "icon.svg",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["windowId-polyfill.js", "background.js"],
    "persistent": true
  }
}
